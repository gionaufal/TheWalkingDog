<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, label: 'Nome' %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :address, required: true, label: 'EndereÃ§o' %>
    <%= f.input :cpf, required: true, label: 'CPF' %>
    <%= f.input :phone, required: true, label: 'Telefone' %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: 'Senha' %>
    <%= f.input :password_confirmation, required: true, label: 'Confirme sua senha' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cadastrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
