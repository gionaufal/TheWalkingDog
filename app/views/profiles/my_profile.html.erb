<section class='profile'>
  <h3><%= @user.name %></h3>

  <%= link_to 'Cadastrar Cachorro', new_dog_path, role: 'button'%>

</section>
<section class='dogs'>
  <% @user.dogs.each do |dog| %>
    <div class="jumbotron">
      <%= image_tag dog.avatar.url(:thumb) %>
      <p><%= dog.name %></p>
      <p><%= dog.age %> anos</p>
      <p><%= dog.size %></p>
      <p><%= dog.race %></p>
      <p><%= dog.personality %></p>
    </div>
  <% end %>
</section>
